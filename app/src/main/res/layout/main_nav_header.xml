<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="8dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/ivMainCover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/accounts_cover"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/lblAccountTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/accounts_noAccount"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/lblMainCommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accounts_add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="@string/accounts" />

        <Spinner
            android:id="@+id/spMainAccounts"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
