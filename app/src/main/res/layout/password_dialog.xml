<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/pwd_title"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/textColorPrimary"
        android:background="@color/colorPrimary"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txtPassword1"
        android:hint="@string/pwd_password1"
        android:autofillHints="@string/pwd_password1"
        android:inputType="textPassword"
        tools:targetApi="o"
        android:layout_margin="4dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txtPassword2"
        android:autofillHints="@string/pwd_password2"
        android:hint="@string/pwd_password2"
        android:inputType="textPassword"
        tools:targetApi="o"
        android:layout_margin="4dp" />

    <Button
        android:id="@+id/cmdSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pwd_submit"
        android:layout_margin="1dp"
        android:textColor="@color/divider"
        android:background="@android:color/background_light"
        style="?android:attr/buttonBarButtonStyle"/>
</LinearLayout>