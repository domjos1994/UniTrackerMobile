<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:id="@+id/root">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/pwd_title"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/textColorPrimary"
        android:background="@color/colorPrimary"/>

    <com.google.android.material.textfield.TextInputLayout
        app:endIconMode="password_toggle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtPassword1"
            android:hint="@string/pwd_password1"
            android:autofillHints="@string/pwd_password1"
            android:inputType="textPassword"
            android:layout_margin="4dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:endIconMode="password_toggle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txtPassword2">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/pwd_password2"
            android:autofillHints="@string/pwd_password2"
            android:inputType="textPassword"
            android:layout_margin="4dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cmdSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pwd_submit"
        android:layout_margin="1dp"/>
</LinearLayout>